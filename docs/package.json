{
  "name": "lookbook-docs",
  "version": "3.0.0.alpha.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf ./output/assets",
    "watch": "npm run clean && npm run watch:css",
    "build": "npm run clean && npm run build:css",
    "watch:css": "postcss ./assets/css/docs.css -d ./output/assets --watch",
    "build:css": "postcss ./assets/css/docs.css -d ./output/assets"
  },
  "devDependencies": {
    "postcss": "^8.4.36",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.0.1",
    "postcss-import-ext-glob": "^2.1.1",
    "postcss-nesting": "^12.0.2",
    "postcss-preset-env": "^9.5.2",
    "postcss-utopia": "^1.0.3"
  }
}
