{
  "name": "lookbook",
  "version": "3.0.0.alpha.0",
  "description": "A native development UI for ViewComponent",
  "type": "module",
  "scripts": {
    "clean": "rm -rf ./public/lookbook-assets",
    "watch": "npm run clean && npm run build:shoelace && concurrently \"npm:watch:css\" \"npm:watch:js\"",
    "build": "npm run clean && npm run build:shoelace && npm run build:css && npm run build:js",
    "build:shoelace": "copyfiles -u 5 ./node_modules/@shoelace-style/shoelace/dist/assets/**/* ./public/lookbook-assets/shoelace/assets",
    "watch:css": "postcss ./assets/entrypoints/*.css -d ./public/lookbook-assets --watch",
    "build:css": "postcss ./assets/entrypoints/*.css -d ./public/lookbook-assets",
    "watch:js": "node esbuild.config.js --watch",
    "build:js": "node esbuild.config.js"
  },
  "author": "Mark Perkins",
  "license": "MIT",
  "dependencies": {
    "@alpinejs/morph": "^3.13.5",
    "@alpinejs/persist": "^3.13.5",
    "@prettier/plugin-ruby": "^4.0.4",
    "@shoelace-style/shoelace": "^2.13.1",
    "alpinejs": "^3.13.5",
    "container-query-polyfill": "^1.0.2",
    "prettier": "^3.2.5",
    "shiki": "^1.2.0"
  },
  "devDependencies": {
    "alias-hq": "^6.2.3",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.20.2",
    "esbuild-plugin-copy": "^2.1.1",
    "fast-glob": "^3.3.2",
    "postcss": "^8.4.36",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.0.1",
    "postcss-import-ext-glob": "^2.1.1",
    "postcss-nesting": "^12.0.2",
    "postcss-preset-env": "^9.5.2"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5"
  }
}
