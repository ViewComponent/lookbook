<%= render component_tag(:sl_tree_item,
  href: url_path,
  key: lookup_path,
  x: {
    data: "navTreeItem({keywords: #{search_terms.to_json}, collection: #{collection?.to_json}})",
    show: "!filteredOut",
    cloak: true,
    "@click": "itemClicked"
  }
) do %>
  <%= lookbook_icon icon %>
  <%= label %>
  <% children&.each do |node| %>
    <%= render Lookbook::UI::NavTreeItem.new(node: node) %>
  <% end %>
<% end %>
