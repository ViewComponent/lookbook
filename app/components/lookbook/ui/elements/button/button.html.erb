<%= render component_tag(button_tag,
  x: {
    data: "button",
    "@click": (click if click.present?),
    "@page-load:start.document": "hidePopovers",
    "@page-update:start.document": "hidePopovers",
    "show": (show if show.present?),
    ":class": "{active: dropdownOpen}"
  },
  data: {
    size: size,
    tooltip: tooltip
  },
  class: "button"
) do %>
  <div class="button-content" x-ref="content">
    <% if content.present? %>
      <%= content %>
    <% else %>
      <%= render Lookbook::UI::Icon.new(name: icon) %>
    <% end %>
  </div>
  <% if dropdown %>
    <template x-ref="dropdown">
      <%= dropdown %>
    </template>
  <% end %>
<% end %>
