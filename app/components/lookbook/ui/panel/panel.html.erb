<%= render component_tag(id: id, data: {padded: padded?, scrollable: scrollable?}) do %>
  <% if actions.any? %>
    <div class="panel-toolbar">
      <sl-button-group label="<%= label %> actions">
        <%= safe_join(actions.reverse) %>
      </sl-button-group>
    </div>
  <% end %>

  <div class="panel-content">
    <%= content %>
  </div>
<% end %>