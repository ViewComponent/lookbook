<%= render component_tag(class: {"with-icon": icon.present?}, data: {theme: theme}) do %>
  <% if icon %>
    <div class="message-icon">
      <% if icon == :lookbook %>
        <svg viewBox="0 0 18 22" xmlns="http://www.w3.org/2000/svg">
          <g stroke="currentColor" stroke-width="1" fill="none" fill-rule="evenodd" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3.5 1H17v20H3.5A2.5 2.5 0 0 1 1 18.5v-15A2.5 2.5 0 0 1 3.5 1Z"></path>
            <path d="M1.153 19.36c0-.737.261-1.188.596-1.57.417-.475.985-.79 1.751-.79H17M6.801 5.1v7.554L6.8 12.7h5.57"></path>
          </g>
        </svg>
      <% else %>
        <%= lb_icon(icon, stroke: 1) %>    
      <% end %>
    </div>
  <% end %>
  <div class="message-content">
    <h1 class="message-title" data-role="title"><%= title %></h1>
    <div class="message-text" data-role="message">
      <%= content %>
    </div>
  </div>
<% end %>