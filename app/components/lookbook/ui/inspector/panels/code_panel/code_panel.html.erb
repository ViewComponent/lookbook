<%= lb_inspector_panel(**tag_attrs,  x: {data: "codePanel"}, data: {panel: "code"}) do |panel| %>
  <% panel.with_action do %>
    <sl-copy-button from="<%= copy_target_id %>"></sl-copy-button>
  <% end %>
  
  <div class="code-panel-code">
    <%= lb_code { content } %>
  </div>
  <div id="<%= copy_target_id %>" class="code-panel-raw"><%= raw copy_source %></div>
<% end %>