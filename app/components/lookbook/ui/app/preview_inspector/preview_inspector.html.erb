<%= render component_tag(key: id, x: {data: "previewInspector", ":class": "{'drawer-closed':drawerClosed}"}) do %> 
  <%= lookbook_layout(id: "inspector-panes", orientation: :horizontal) do |layout| %>
    <% layout.with_pane do %>
      <%= render preview_pane %>
    <% end %>
    <% layout.with_pane do %>
      <%= render drawer_pane %>
    <% end %>
  <% end %>
<% end %>
