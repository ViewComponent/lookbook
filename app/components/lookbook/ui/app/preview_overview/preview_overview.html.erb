<%= render component_tag(key: id, x: { data: "previewOverview" }) do %>
  <%= lookbook_pane(id: "#{id}-#{preview.id}-pane") do |pane| %>
    <% pane.with_title do %>
    <%= lookbook_icon :layers, class: "po-title-icon" %>
      <span class="po-title">
        <%= preview.label %>
      </span>
    <% end %>

    <div class="po-breadcrumbs">
      <span class="po-breadcrumb"><%= previews_nav_label %></span>
      <%= lookbook_icon :chevron_right, class: "po-breadcrumb-divider" %>
      <% breadcrumbs.each do |node| %>
        <span class="po-breadcrumb"><%= node.label %></span>
        <% unless node == breadcrumbs.last %>
          <%= lookbook_icon :chevron_right, class: "po-breadcrumb-divider" %>
        <% end %>
      <% end %>
    </div>

    <div class="po-content">
      <% if preview.notes? %>
        <section class="po-notes">
          <%= lookbook_prose { preview.notes } %>
        </section>
      <% end %>

      <section class="po-targets">
        <% if false %>
          <h4 class="po-section-title">
            <%= pluralize(targets.size, "preview") %>
          </h4>  
        <% end %>
        
        <ol>
          <% targets.each do |target| %>
            <li class="po-target">
              <a href="<%= target.url_path %>">
                <%= target.label %>
              </a>
            </li>
          <% end %>
        </ol>
      </section>
    </div>
  <% end %>
<% end %>
