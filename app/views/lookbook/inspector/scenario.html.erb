<%= lb_inspector(id: "inspector") do |inspector| %>
  <% inspector.with_viewer do |viewer| %>
    <% viewer.with_tab("preview", label: "Preview") do %>
      <iframe src="<%= render_scenario_path(@preview, @scenario) %>" frameborder="0" width="100%" height="100%"></iframe>
    <% end %>
    
    <% viewer.with_tab("output", label: "Output") do %>
      <%= raw @scenario_html %>
    <% end %>
  <% end %>  

  <% inspector.with_drawer do |drawer| %>
    <% drawer.with_tab("source", label: "Source") do %>
      <div id="<%= dom_id(@preview, :source) %>">
        <%= @preview.label %> / <%= @scenario.label %>  source 
      </div>
      <sl-copy-button from="<%= dom_id(@preview, :source) %>"></sl-copy-button>
    <% end %>
    
    <% drawer.with_tab("notes", label: "Notes") do %>
      <%= @preview.label %> / <%= @scenario.label %>  notes
    <% end %>
  <% end %>  
<% end %>
  