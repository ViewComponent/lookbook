
<%= lb_inspector_panel(id: dom_id(target, :metadata_panel), padded: true) do %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>UUID</td>
        <td><code><%= target.uuid %></code></td>
      </tr>
      <tr>
        <td>Permalink</td>
        <td><code><%= link_to permalink_path(target.uuid), permalink_path(target.uuid) %></code></td>
      </tr>
      <tr>
        <td>Preview file path</td>
        <td><code><%= preview.preview_app_file_path %></code></td>
      </tr>
      <tr>
        <td>Display options</td>
        <td><code><%= @display_options.to_json %></code></td>
      </tr>
    </tbody>
  </table>
<% end %>
