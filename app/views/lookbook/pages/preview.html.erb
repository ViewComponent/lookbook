<%=
  lb_pane(id: dom_id(@preview)) do |pane|
    pane.with_toolbar do |toolbar|
      toolbar.with_breadcrumb(@config.previews_nav_label, @preview.ancestors, @preview)      
    end
    
    if @page
      lb_page(@page, footer: false) { @page_content }
    else
      lb_page(title: @preview.title, footer: false) do
        @page_content
      end
    end
  end
%>