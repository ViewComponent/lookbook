<% content_for :body do %>
   <%=
    render Lookbook::UI::Router.new(events_endpoint: @events_endpoint.to_json) do
      render Lookbook::UI::Layout.new(id: "app") do |layout|
        layout.with_header do
          link_to @config.project_name, root_path
        end

        layout.with_previews_nav(@previews.to_tree)
        layout.with_pages_nav(@pages.to_tree)

        layout.with_main do
          content_for?(:main) ? yield(:main) : yield
        end

        if @config.status_bar
          layout.with_status_bar(notifications: @notifications)
        end
      end
    end
  %>
<% end %>

<%= render template: "layouts/lookbook/skeleton" %>