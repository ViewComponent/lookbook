<!DOCTYPE html>
<html lang="en" class="sl-theme-light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= lookbook_asset_tags("app") %>
  
  <title><%= @config.project_name %></title>
</head>
<body>
<%=
  lookbook_router(@events_endpoint.to_json) do
    lookbook_app do |app|
      app.with_header do
        link_to @config.project_name, root_path
      end

      app.with_previews_nav(@inspector.nav_tree)
      app.with_pages_nav(@docs.nav_tree)

      app.with_main do
        content_for?(:main) ? yield(:main) : yield
      end

      if @config.status_bar
        app.with_status_bar(notifications: @notifications)
      end
    end
  end
%>
</body>
</html>