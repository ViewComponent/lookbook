<!DOCTYPE html>
<html lang="en" class="lookbook-theme-light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= lookbook_asset_tags("app") %>
  
  <title><%= @config.project_name %></title>
</head>
<body>
<%=
  render Lookbook::UI::Router.new(events_endpoint: @events_endpoint.to_json) do
    render Lookbook::UI::Layout.new(id: "app") do |layout|
      layout.with_header do
        link_to @config.project_name, root_path
      end

      layout.with_previews_nav(@inspector.nav_tree)
      layout.with_pages_nav(@docs.nav_tree)

      layout.with_main do
        content_for?(:main) ? yield(:main) : yield
      end

      if @config.status_bar
        layout.with_status_bar(notifications: @notifications)
      end
    end
  end
%>
</body>
</html>